<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nteport.admin.mapper.TEmergencyMapper">

    <resultMap id="BaseResultMap" type="com.nteport.admin.entity.TEmergencyEntity">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="headId" column="head_id" jdbcType="BIGINT"/>
            <result property="reportTime" column="report_time" jdbcType="VARCHAR"/>
            <result property="situation" column="situation" jdbcType="VARCHAR"/>
            <result property="pointId" column="pointId" jdbcType="BIGINT"/>
            <result property="position" column="position" jdbcType="VARCHAR"/>
            <result property="address" column="address" jdbcType="VARCHAR"/>
            <result property="photoId" column="photo_id" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="CHAR"/>
            <result property="memo" column="memo" jdbcType="VARCHAR"/>
            <result property="createUser" column="create_user" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateUser" column="update_user" jdbcType="BIGINT"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="creatorName" column="creator_name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,head_id,report_time,
        situation,place,photo_id,
        status,memo,create_user,
        create_time,update_user,update_time,
        creator_name
    </sql>

    <select id="count" resultType="hashmap" parameterType="hashmap">
        select
            count(case when DATE_FORMAT(t1.create_time,'%Y-%m') = DATE_FORMAT(sysdate(),'%Y-%m') then 1 end) as sum,
            count(case when DATE_FORMAT(t1.create_time,'%Y-%m') = DATE_FORMAT(sysdate(),'%Y-%m') and t1.status='1' then 1 end) as solvedSum,
            t2.area from t_emergency t1
            left join t_point_info t2
        on t1.point_id = t2.id
        where t2.name is not null
        group by t2.area
    </select>
</mapper>
