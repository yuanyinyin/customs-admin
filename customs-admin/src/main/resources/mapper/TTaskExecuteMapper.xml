<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nteport.admin.mapper.TTaskExecuteMapper">

    <resultMap id="BaseResultMap" type="com.nteport.admin.entity.TTaskExecuteEntity">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="taskId" column="task_id" jdbcType="BIGINT"/>
            <result property="declareDate" column="declare_date" jdbcType="VARCHAR"/>
            <result property="detail" column="detail" jdbcType="VARCHAR"/>
            <result property="startDate" column="start_date" jdbcType="VARCHAR"/>
            <result property="endDate" column="end_date" jdbcType="VARCHAR"/>
            <result property="dept" column="dept" jdbcType="VARCHAR"/>
            <result property="deptName" column="dept_name" jdbcType="VARCHAR"/>
            <result property="frequency" column="frequency" jdbcType="BIGINT"/>
            <result property="frequencyName" column="frequency_name" jdbcType="VARCHAR"/>
            <result property="memo" column="memo" jdbcType="VARCHAR"/>
            <result property="executed" column="executed" jdbcType="VARCHAR"/>
            <result property="executeTime" column="execute_time" jdbcType="VARCHAR"/>
            <result property="createUser" column="create_user" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateUser" column="update_user" jdbcType="BIGINT"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="creatorName" column="creator_name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,task_id,declare_date,
        detail,start_date,end_date,
        dept,dept_name,frequency,
        frequency_name,memo,executed,
        execute_time,create_user,create_time,
        update_user,update_time,creator_name
    </sql>

    <update id="updateLate">
        update t_task_execute set executed='2' where executed='0' and frequency=1 and DATE_FORMAT(create_time,'%Y-%m-%d') &lt;= DATE_FORMAT(DATE_ADD(sysdate(), INTERVAL -1 DAY),'%Y-%m-%d')
    </update>
</mapper>
